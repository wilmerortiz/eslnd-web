---
import { getI18N } from "../i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="text-xl text-left max-w-[70ch] text-pretty mx-auto my-24">
    <img class="w-16 mb-16 mx-auto" src="/logo.png" alt="Logo" />
    <h1 class="text-4xl font-semibold text-center text-wrap mx-auto mb-10">
        {i18n.INTRO_TITLE} <br> {i18n.INTRO_TITLE_AFTER_BR}
    </h1>
    <p set:html={i18n.INTRO_DESCRIPTION_1}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_2}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_3}></p>

</section>
